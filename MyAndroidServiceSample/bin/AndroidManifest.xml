<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myandroidservicesample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.myandroidservicesample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name="MyService">
            <intent-filter>
                <action android:name="com.example.myandroidservicesample.action.MY_SERVICE"/>
            </intent-filter>
        </service>

        <service android:name="MyRemoteService">
            <intent-filter>
                <action android:name="com.example.myandroidservicesample.action.MY_REMOTE_SERVICE"/>
            </intent-filter>
        </service>
        
    </application>

</manifest>
